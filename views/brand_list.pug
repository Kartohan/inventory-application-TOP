extends layout

block content
    .w-full.bg-slate-600.p-3.flex.gap-10.justify-center.items-center
        p.text-2xl.text-bold.text-white Brands (#{brands.length})
        a.h-12.w-36.bg-sky-300.block.rounded-lg.flex.justify-center.items-center(href="/brand/create" class="transition hover:scale-[1.02]") Add new brand
    div.mx-auto.my-10.flex.gap-10.justify-center.flex-wrap(class="max-w-[1020px]")
        for brand in brands
            a.h-72.w-56(href=brand.url class="hover:scale-[1.02] transition hover:shadow-xl")
                div.h-72.w-56.rounded-lg.relative.shadow-md.ring-1.overflow-hidden
                    img.absolute.object-contain.h-full.w-full.p-2(src="uploads/" + brand.image, alt=brand.name)
                p.text-white.z-10.text-2xl.text-center(class="catalog-text") #{brand.name}